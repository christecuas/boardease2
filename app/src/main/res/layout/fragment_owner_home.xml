<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Top Row: Welcome + Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Welcome Message -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back,"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_regular" />

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner"
                    android:textSize="26sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />
            </LinearLayout>

            <!-- Notification & Message Icons (switchable states) -->
            <!-- Notification & Message Icons (with red dot badge) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <!-- Notification with badge -->
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_notification"
                        android:background="@drawable/circle_border"
                        android:padding="10dp"
                        android:contentDescription="Notification" />

                    <!-- Red Dot -->
                    <View
                        android:id="@+id/badgeNotif"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/red_dot"
                        android:visibility="gone" />
                </FrameLayout>

                <!-- Message with badge -->
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <!-- Red Dot -->
                    <ImageView
                        android:id="@+id/ivMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_message"
                        android:background="@drawable/circle_border"
                        android:padding="10dp"

                        android:contentDescription="Message"


                        />

                    <View
                        android:id="@+id/badgeMsg"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/red_dot"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>


        </LinearLayout>

        <!-- Listings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/noofListings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Left Side Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:fontFamily="@font/poppins_medium" />

                    <!-- make this explicitly bold and give it an id for fallback -->
                    <TextView
                        android:id="@+id/tvListingsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listings"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold" />
                </LinearLayout>

                <!-- Number on Right Side -->
                <TextView
                    android:id="@+id/tvListingsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="32sp"
                    android:textColor="#A97A50"
                    android:fontFamily="@font/poppins_bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Engagements -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engagements"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:textColor="#333333"
            android:fontFamily="@font/poppins_medium" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvViewsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="#A97A50"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="views per day"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Popular Listing -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Listing"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:textColor="#333333"
            android:fontFamily="@font/poppins_medium" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgPopularListing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_listing"
                    android:contentDescription="Popular Listing Image" />

                <!-- Gradient Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/overlay_gradient" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/tvPopularTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sample Boarding House"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_semibold" />

                    <TextView
                        android:id="@+id/tvPopularVisits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 visits"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
