<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/arrowleft"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true" />

            <!-- Title in center -->
            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                tools:text="Boarding House Details" />

            <!-- Right buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/share"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/favorite"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Swipable Main Images with Indicator -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpImages"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:overScrollMode="never" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            app:tabIndicatorHeight="0dp"
            app:tabIndicator="@null"
            app:tabBackground="@drawable/tab_background_selector"
            app:tabGravity="center"
            app:tabIndicatorGravity="center" />

        <!-- Dynamic preview thumbnails -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPreviews"
            tools:listitem="@layout/item_preview"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:padding="8dp"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- Title Only -->
        <TextView
            android:id="@+id/tvBHName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text=""
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            tools:text="Sample Boarding House" />

        <!-- Location with Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/location"
                android:contentDescription="Location Icon" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:paddingStart="6dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#555555"
                tools:text="Cebu City" />
        </LinearLayout>

        <!-- Property details row -->
        <!-- Property Details Section -->
        <TextView
            android:id="@+id/tvPropertyDetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Details"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutPropertyDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Private Rooms -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Private Rooms:"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/tvPrivateRooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:text="3 Available" />
            </LinearLayout>

            <!-- Bed Spacer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bed Spacer:"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/tvBedSpacer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    tools:text="5 Available" />
            </LinearLayout>

            <!-- Bathroom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bathrooms:"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/tvBathrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    tools:text="2" />
            </LinearLayout>

            <!-- Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Area:"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    tools:text="1,880 sqft" />
            </LinearLayout>

            <!-- Build Year -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Build Year:"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/tvBuildYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    tools:text="2020" />
            </LinearLayout>

            <!-- Parking -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Parking:"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/tvParking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    tools:text="1 Indoor" />
            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status:"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    tools:text="For Rent" />
            </LinearLayout>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvDescriptionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum description..."
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            tools:text="Spacious and affordable boarding house with great amenities." />

        <!-- Owner info -->
        <TextView
            android:id="@+id/tvOwnerManagerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner / Manager"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivOwner"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle"
                android:contentDescription="Owner profile picture"
                tools:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esther Howard"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:text="Theresa Webb" />

                <TextView
                    android:id="@+id/tvOwnerRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boarding House Owner"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#666666" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/calll" />

            <ImageButton
                android:id="@+id/btnMessage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/message"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Map"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Map placeholder -->
        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_margin="12dp"
            android:contentDescription="Map preview"
            tools:src="@drawable/ic_map" />

        <TextView
            android:id="@+id/tvReviewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            tools:listitem="@layout/item_review" />

        <!-- Bottom button -->
        <Button
            android:id="@+id/btnChooseAccommodation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Type of Accommodation"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_semibold"
            android:backgroundTint="#A97A50"
            android:textColor="#FFFFFF"
            android:layout_margin="12dp" />

    </LinearLayout>
</ScrollView>
