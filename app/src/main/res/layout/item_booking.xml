<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Boarding House Image -->
        <ImageView
            android:id="@+id/imgBoardingHouse"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_listing"
            android:contentDescription="Boarding House Image"
            app:cornerRadius="12dp" />

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <!-- BH Name -->
            <TextView
                android:id="@+id/tvBoardingHouseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunshine Boarding House"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/location"
                    android:contentDescription="Location"
                    android:tint="#666666" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quezon City, Metro Manila"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Booking Dates -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Dates"
                    android:tint="#666666" />

                <TextView
                    android:id="@+id/tvBookingDates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 1, 2024 - Dec 31, 2024"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Monthly Due -->
            <TextView
                android:id="@+id/tvMonthlyDue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±3,500/month"
                android:textSize="14sp"
                android:textColor="#2E7D32"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="6dp" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/bg_status_approved"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Details"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@color/brown"
            app:cornerRadius="20dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_gravity="bottom|end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
