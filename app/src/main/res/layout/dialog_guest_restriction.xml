<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info"
            android:contentDescription="Info"
            android:background="@drawable/circle_bg"
            android:padding="12dp"
            android:tint="#A18167" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login Required"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Access full features"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login or Signup to view details, make bookings, and access all features."
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="#A18167"
            app:cornerRadius="20dp"
            android:paddingVertical="12dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Signup"
            android:textSize="14sp"
            android:textColor="#A18167"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="20dp"
            app:strokeColor="#A18167"
            app:strokeWidth="2dp"
            android:paddingVertical="12dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
