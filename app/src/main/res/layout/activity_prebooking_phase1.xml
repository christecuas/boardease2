<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Carousel Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <!-- ViewPager2 for Image Carousel -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Image Indicators -->
                <LinearLayout
                    android:id="@+id/layoutIndicators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal" />

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="16dp"
                    android:background="@drawable/circle_bg"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    android:padding="12dp" />

                <!-- Share Button -->
                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    android:background="@drawable/circle_bg"
                    android:src="@drawable/share"
                    android:contentDescription="Share"
                    android:padding="12dp" />

                <!-- Favorite Button -->
                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="72dp"
                    android:background="@drawable/circle_bg"
                    android:src="@drawable/favorite"
                    android:contentDescription="Add to favorites"
                    android:padding="12dp" />

            </RelativeLayout>

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Page Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre-Booking Phase 1"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="8dp" />

                <!-- BH Name -->
                <TextView
                    android:id="@+id/tvBoardingHouseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunshine Boarding House"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="24dp" />

                <!-- Accommodation Categories Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Your Accommodation"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="16dp" />

                <!-- Private Room Container -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPrivateRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Private Room Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Private Room"
                                    android:textSize="18sp"
                                    android:textColor="#000000"
                                    android:fontFamily="@font/poppins_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₱5,000/month"
                                    android:textSize="16sp"
                                    android:textColor="#A18167"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 available"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:fontFamily="@font/poppins_regular"
                                android:background="@drawable/circle_bg"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />
                        </LinearLayout>

                        <!-- Short Description -->
                        <TextView
                            android:id="@+id/tvPrivateRoomShort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Single occupancy with private bathroom and essential amenities."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="12dp" />

                        <!-- Collapsible Description -->
                        <LinearLayout
                            android:id="@+id/layoutPrivateRoomDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="• Private bedroom with lockable door\n• Private bathroom with hot and cold water\n• Study desk and chair\n• Wardrobe and storage space\n• Air conditioning unit\n• Free WiFi access\n• Access to common kitchen area\n• Laundry facilities available\n• 24/7 security and CCTV monitoring\n• Near public transportation"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/poppins_regular"
                                android:lineSpacingExtra="4dp"
                                android:layout_marginBottom="16dp" />
                        </LinearLayout>

                        <!-- See More/Less Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPrivateRoomToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See More"
                            android:textColor="#A18167"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            app:cornerRadius="20dp"
                            app:strokeColor="#A18167"
                            app:strokeWidth="1dp"
                            android:backgroundTint="#FFFFFF"
                            android:layout_marginBottom="16dp" />

                        <!-- Book Button and Reminder -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="start">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBookPrivateRoom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Book"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_semibold"
                                app:cornerRadius="25dp"
                                android:backgroundTint="#A18167"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You will not be charged yet."
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:fontFamily="@font/poppins_regular" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Bed Spacer Container -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBedSpacer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Bed Spacer Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bed Spacer"
                                    android:textSize="18sp"
                                    android:textColor="#000000"
                                    android:fontFamily="@font/poppins_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₱3,500/month"
                                    android:textSize="16sp"
                                    android:textColor="#A18167"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8 available"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:fontFamily="@font/poppins_regular"
                                android:background="@drawable/circle_bg"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />
                        </LinearLayout>

                        <!-- Short Description -->
                        <TextView
                            android:id="@+id/tvBedSpacerShort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shared room with common bathroom and shared facilities."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="12dp" />

                        <!-- Collapsible Description -->
                        <LinearLayout
                            android:id="@+id/layoutBedSpacerDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="• Shared bedroom with 2-4 occupants\n• Shared bathroom with hot and cold water\n• Personal storage locker\n• Shared study area\n• Ceiling fan for ventilation\n• Free WiFi access\n• Access to common kitchen area\n• Laundry facilities available\n• 24/7 security and CCTV monitoring\n• Near public transportation\n• Perfect for budget-conscious students"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/poppins_regular"
                                android:lineSpacingExtra="4dp"
                                android:layout_marginBottom="16dp" />
                        </LinearLayout>

                        <!-- See More/Less Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBedSpacerToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See More"
                            android:textColor="#A18167"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            app:cornerRadius="20dp"
                            app:strokeColor="#A18167"
                            app:strokeWidth="1dp"
                            android:backgroundTint="#FFFFFF"
                            android:layout_marginBottom="16dp" />

                        <!-- Book Button and Reminder -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="start">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBookBedSpacer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Book"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_semibold"
                                app:cornerRadius="25dp"
                                android:backgroundTint="#A18167"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You will not be charged yet."
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:fontFamily="@font/poppins_regular" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
