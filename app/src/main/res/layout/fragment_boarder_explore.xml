<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/circle_border1"
            android:padding="12dp"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Explore Boarding Houses"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_semibold" />

    </LinearLayout>

    <!-- Search and Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingBottom="16dp">

        <!-- Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search"
                    android:contentDescription="Search" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search for boarding houses..."
                    android:background="@android:color/transparent"
                    android:paddingStart="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Filter and Sort Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Filter"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                app:cornerRadius="20dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF"
                app:icon="@drawable/ic_arrow_down"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Sort"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                app:cornerRadius="20dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF"
                app:icon="@drawable/ic_arrow_down"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Results Count -->
    <TextView
        android:id="@+id/tvResultsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="8dp"
        android:text="Found 0 boarding houses"
        android:textSize="14sp"
        android:textColor="#666666"
        android:fontFamily="@font/poppins_regular" />

    <!-- Boarding Houses RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBoardingHouses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="24dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="24dp"
        android:visibility="gone" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/empty"
            android:contentDescription="No results found"
            android:alpha="0.6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No boarding houses found"
            android:textSize="18sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try adjusting your search criteria"
            android:textSize="14sp"
            android:textColor="#999999"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>
