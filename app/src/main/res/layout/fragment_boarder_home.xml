<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section: Welcome + Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Welcome Message -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back,"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_regular" />

                <TextView
                    android:id="@+id/tvBoarderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boarder"
                    android:textSize="26sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />
            </LinearLayout>

            <!-- Notification & Message Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <!-- Notification with badge -->
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_notification1"
                        android:background="@drawable/circle_border1"
                        android:padding="10dp"
                        android:contentDescription="Notification" />

                    <!-- Red Dot -->
                    <View
                        android:id="@+id/badgeNotif"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/red_dot"
                        android:visibility="gone" />
                </FrameLayout>

                <!-- Message with badge -->
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <ImageView
                        android:id="@+id/ivMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_message1"
                        android:background="@drawable/circle_border1"
                        android:padding="10dp"
                        android:contentDescription="Message" />

                    <View
                        android:id="@+id/badgeMsg"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/red_dot"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search"
                    android:contentDescription="Search" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search for boarding houses..."
                    android:background="@android:color/transparent"
                    android:paddingStart="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Recommended Boarding Houses Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended Boarding Houses"
                android:textSize="18sp"
                android:textColor="#333333"
                android:fontFamily="@font/poppins_medium" />

            <!-- Horizontal RecyclerView for Recommended BHs -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommendedBH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingEnd="24dp" />

        </LinearLayout>

        <!-- Nearby Boarding Houses Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <!-- Section Header with See All Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nearby Boarding Houses"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textSize="14sp"
                    android:textColor="@color/brown"
                    android:fontFamily="@font/poppins_medium"
                    android:backgroundTint="@android:color/transparent"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/brown"
                    app:strokeWidth="1dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>

            <!-- Vertical RecyclerView for Nearby BHs -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNearbyBH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:clipToPadding="false"
                android:paddingBottom="24dp" />

        </LinearLayout>

        <!-- Quick Actions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textColor="#333333"
                android:fontFamily="@font/poppins_medium" />

            <!-- Quick Actions Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- My Bookings Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMyBookings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/btn_booking"
                            android:background="@drawable/circle_border1"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Bookings"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Favorites Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFavorites"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/btn_heart"
                            android:background="@drawable/circle_border1"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favorites"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>