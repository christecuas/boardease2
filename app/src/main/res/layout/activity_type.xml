<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/arrowleft"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/share"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/favorite"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Swipable Main Images with Indicator -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpImages"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:overScrollMode="never" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            app:tabIndicatorHeight="0dp"
            app:tabIndicator="@null"
            app:tabBackground="@drawable/tab_background_selector"
            app:tabGravity="center"
            app:tabIndicatorGravity="center" />

        <!-- Dynamic preview thumbnails -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPreviews"
            tools:listitem="@layout/item_preview"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- Boarding House Title -->
        <TextView
            android:id="@+id/tvBHName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text=""
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            tools:text="Sample Boarding House" />

        <!-- Location with Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/location"
                android:contentDescription="Location Icon" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:paddingStart="6dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#555555"
                tools:text="Cebu City" />
        </LinearLayout>

        <!-- Private Room Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private Rooms"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPrivateRoomDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Tap view to check available private rooms with images and details."
            android:textSize="14sp"
            android:textColor="#555555"
            tools:text="Good for 1â€“2 persons, Air-conditioned" />

        <Button
            android:id="@+id/btnViewPrivateRooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#A97A50"
            android:text="VIEW"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FFFFFF"
            android:textAllCaps="true" />

        <!-- Bed Spacer Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bed Spacers"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvBedSpacerDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Tap view to check available bed spacers with images and details."
            android:textSize="14sp"
            android:textColor="#555555"
            tools:text="Shared rooms, per bed" />

        <Button
            android:id="@+id/btnViewBedSpacers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#A97A50"
            android:text="VIEW"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FFFFFF"
            android:textAllCaps="true" />

    </LinearLayout>
</ScrollView>
