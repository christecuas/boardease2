<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Booking Details"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_bold" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:rotation="180" />

    </LinearLayout>

    <!-- Boarding House Image -->
    <ImageView
        android:id="@+id/imgBoardingHouse"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_listing"
        android:contentDescription="Boarding House Image"
        app:cornerRadius="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Boarding House Name -->
    <TextView
        android:id="@+id/tvBoardingHouseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunshine Boarding House"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="8dp" />

    <!-- Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/location"
            android:contentDescription="Location"
            android:tint="#666666" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quezon City, Metro Manila"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Booking Information Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9FAFB"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Start Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Date"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="January 1, 2024"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>

            <!-- End Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End Date"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="December 31, 2024"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>

            <!-- Monthly Due -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Monthly Due"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/tvMonthlyDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱3,500"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:fontFamily="@font/poppins_bold" />

            </LinearLayout>

            <!-- Balance Due -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Balance Due"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/tvBalanceDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:fontFamily="@font/poppins_bold" />

            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/bg_status_approved"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Support and Payment Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSupportTicket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Request for Maintenance/Support"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="#FF6B35"
            app:cornerRadius="20dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:layout_marginEnd="8dp"
            android:drawableStart="@drawable/ic_maintenance"
            android:drawablePadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMakePayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Make Payment"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="#2E7D32"
            app:cornerRadius="20dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_payment"
            android:drawablePadding="8dp" />

    </LinearLayout>

    <!-- Review Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9FAFB"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate & Review"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="12dp" />

            <!-- Star Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating:"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginEnd="12dp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1"
                    android:progressTint="#FFD700"
                    android:secondaryProgressTint="#FFD700"
                    style="?android:attr/ratingBarStyleSmall" />

            </LinearLayout>

            <!-- Review Message -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your review (optional)..."
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E0E0E0"
                app:hintTextColor="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etReviewMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:maxLines="4"
                    android:gravity="top"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:inputType="textMultiLine|textCapSentences" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Submit Review Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Review"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="#A18167"
                app:cornerRadius="20dp"
                android:paddingVertical="12dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="20dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp" />

    </LinearLayout>

</LinearLayout>
