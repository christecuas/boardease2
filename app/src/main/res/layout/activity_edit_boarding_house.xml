<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed">

        <!-- Header with Back Button and Title -->
        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/arrowleft"
                android:contentDescription="Back"
                android:layout_centerVertical="true"/>


            <!-- Centered Title -->
            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Listing"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#000000"
                android:layout_centerInParent="true"/>
        </RelativeLayout>



        <!-- Symbol/Icon in upper-right -->
        <ImageView
            android:id="@+id/ivSymbol"
            android:layout_width="93dp"
            android:layout_height="59dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Options"
            android:scaleType="fitCenter"
            android:src="@drawable/boxadd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Placeholder + Swipable Image Preview -->





        <FrameLayout
            android:id="@+id/flImageContainer"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Placeholder Image (clickable, default visible) -->
            <ImageView
                android:id="@+id/ivPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dashed_border"
                android:scaleType="centerInside"
                android:src="@drawable/ic_upload_cloud"
                android:contentDescription="Click here to upload"
                android:padding="40dp"
                android:clickable="true"
                android:focusable="true"
                android:tint="#888888"
                android:visibility="visible" />

            <!-- Overlayed Text -->
            <TextView
                android:id="@+id/tvUploadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to upload"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="12dp"/>

            <!-- ViewPager for selected images (hidden by default) -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="12dp"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/flImageContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Enter name"
            android:textColor="#000000"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <!-- DETAILS SECTION -->
        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BH Details"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/etTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp" />

        <GridLayout
            android:id="@+id/glDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:text="Bathrooms:"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="4dp"
                android:layout_columnWeight="1"/>
            <EditText
                android:id="@+id/etBathrooms"
                android:hint="Enter no. of bathrooms"
                android:textColor="#000000"
                android:inputType="number"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:layout_columnWeight="2"/>

            <TextView
                android:text="Area (sqft):"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="4dp"
                android:layout_columnWeight="1"/>
            <EditText
                android:id="@+id/etArea"
                android:hint="Enter area size"
                android:textColor="#000000"
                android:inputType="number"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:layout_columnWeight="2"/>

            <TextView
                android:text="Build Year:"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="4dp"
                android:layout_columnWeight="1"/>
            <EditText
                android:id="@+id/etBuildYear"
                android:hint="Enter year"
                android:textColor="#000000"
                android:inputType="number"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:layout_columnWeight="2"/>
        </GridLayout>

        <!-- Address -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/glDetails"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Enter address"
            android:textColor="#000000"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            app:layout_constraintTop_toBottomOf="@id/tvAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:hint="Enter description"
            android:textColor="#000000"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <!-- Rules -->
        <TextView
            android:id="@+id/tvRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/etDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/etRules"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:hint="Enter rules"
            android:textColor="#000000"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/tvRules"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Save Changes"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_regular"
            android:backgroundTint="#A97A50"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/etRules"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
