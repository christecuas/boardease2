<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33A18167"> <!-- ripple highlight (light brown with transparency) -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent inside -->
            <stroke
                android:width="2dp"
                android:color="#A18167"/> <!-- Brown border -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</ripple>
